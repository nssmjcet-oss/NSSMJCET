rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user data from Firestore
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if user has a specific role
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    // Helper for any admin access (admin or superadmin)
    function isAdmin() {
      return hasRole('admin') || hasRole('superadmin');
    }

    // Public collections (Read-only for public, Write for admins)
    match /{collection}/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection (Restricted to Super Admin)
    match /users/{userId} {
      allow read: if hasRole('superadmin') || (isAuthenticated() && request.auth.uid == userId);
      allow write: if hasRole('superadmin');
    }

    // Volunteers collection (Public can create/read their own, Admins can manage all)
    match /volunteers/{volunteerId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
